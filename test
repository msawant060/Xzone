<script type="text/javascript">
    $(document).ready(function(){
        $( document ).on( 'focus', ':input', function(){
            $( this ).attr( 'autocomplete', 'off' );
        });
    });
	/* Document ready */
    $(document).ready(function(){
        $('form').parsley();
        //Get browser timezone & set it
        var timezone = jstz.determine();
        var url = 'https://xzonelocal.com/web/home/set_timezone';
        $.ajax({
            type: "GET",
            url: url,
            data: {
                "timezone":timezone.name(),
            },
            success:function(results)
            {   
                
            }
        });
    });

	/* Google place auto complete */
	$("#search_location").geocomplete().bind("geocode:result", function(event, result){ 
	    $("#latitude").val(result.geometry.location.lat().toFixed(8)); 
	    $("#longitude").val(result.geometry.location.lng().toFixed(8));  
	    
	    // Find city from address
	    var componentForm = { locality: 'long_name', administrative_area_level_1: 'long_name', country: 'long_name' };

	    for (var i = 0; i < result.address_components.length; i++) {
	        var addressType = result.address_components[i].types[0];
	        if (componentForm[addressType]) {
	            if(addressType == "locality" || addressType == "country" || addressType == "administrative_area_level_1")
	            {
	                var val = result.address_components[i][componentForm[addressType]];   
	                if(addressType == "locality") $("#city").val(val);
	                if(addressType == "country") $("#country").val(val);
	                if(addressType == "administrative_area_level_1") $("#state").val(val);
	            }
	        }
	    }
	    $("#search_location_error").html("");
        codeLatLng($("#latitude").val(), $("#longitude").val());

	});

    var geocoder = new google.maps.Geocoder();
    $(window).on('load', function() {
        /* Script for get cureent location */
                    $("#latitude").val("12.9833"); 
            $("#longitude").val("77.5833");  
            codeLatLng(12.9833, 77.5833);
            }); 

    /* Get location from geolocation */
    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition, showError);
        } else { 
            /* if browser does not support geo location then get it from ip */
            /* Check location from ip is empty or not? */
                            $("#latitude").val("12.9833");
                $("#longitude").val("77.5833");
                codeLatLng($("#latitude").val(), $("#longitude").val());
                    }
    }

    /* geolocation find location successfully  */
    function showPosition(position) {
        $("#latitude").val(position.coords.latitude);
        $("#longitude").val(position.coords.longitude);
        codeLatLng($("#latitude").val(), $("#longitude").val(""));
    }
    
    /* if geolocation failed then call api for get lat long */
    function showError(error) { 
        /* if geo location throws an error then get it from ip */
        /* Check location from ip is empty or not? */
                    $("#latitude").val("12.9833");
            $("#longitude").val("77.5833");
            codeLatLng($("#latitude").val(), $("#longitude").val());
            }

    /* Check lat long is currect or not and get location from lat long */
    function codeLatLng(lat, lng) {
        var latlng = new google.maps.LatLng(lat, lng);
        geocoder.geocode({'latLng': latlng}, function(results, status) {
            
            if (status == google.maps.GeocoderStatus.OK) 
            {
                
                if (results[0]) {
                    latitude = lat;
                    longitude = lng;
                    var locality_found = false;
                    var componentForm = {
                        locality: 'long_name',
                        administrative_area_level_1: 'long_name',
                        country: 'long_name'
                    };
                    $("#search_location").val(results[0].formatted_address);
                    for (var i = 0; i < results[0].address_components.length; i++) {
                        var addressType = results[0].address_components[i].types[0];
                        if (componentForm[addressType]) {
                            if(addressType == "locality" || addressType == "country" || addressType == "administrative_area_level_1")
                            {
                                locality_found = true;
                                var val = results[0].address_components[i][componentForm[addressType]];   
                                if(addressType == "locality") $("#city").val(val);
                                if(addressType == "country") $("#country").val(val);
                                if(addressType == "administrative_area_level_1") $("#state").val(val);
                            }
                        }
                    }
                    $("#search_location_error").html("");
                    set_session_server();
                } 
                else 
                {
                    //swal("We're unable to fetch your current location");
                    $("#search_location_error").html("We're unable to fetch your current location");
                }
            } 
            else 
            {
                //swal("Geocoder failed due to: " + status);
                $("#search_location_error").html("We're unable to fetch your current location");
            }
        });
    }

    /* used to set session in server */
    function set_session_server(){
    	$.ajax({
		    url : "https://xzonelocal.com/web/home/set_session",
		    type : 'GET',
		    data : {
		        'latitude' : $("#latitude").val(),
		        'longitude' : $("#longitude").val(),
		        'location' : $("#search_location").val(),
		        'city' : $("#city").val(),
		        'state' : $("#state").val(),
		        'country' : $("#country").val(),
		    },
		    success : function(data) {
                if(data.code == "0"){
                    $("#search_location_error").html("We're unable to fetch your current location");   
                } else {
                    $("#search_location_error").html("");
                    if(typeof popular_merchants !== 'undefined' && $.isFunction(popular_merchants)) {
                        popular_merchants();
                        featured_deals();
                    }
                }
		    }, error : function(request,error) {
                /* if any error while setting up session */
		        //$("#search_location_error").html("We're unable to fetch your current location");
		    }
		});
    }

    /* Hide and show alert messages */
    $(".alert").fadeTo(3000, 500).slideUp(500, function(){
        $(".alert").slideUp(500);
    });

    /* Animation */
    function CounterAnimation(counterid, x) {
        $('#'+counterid).addClass(x + ' animated').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
            $(this).removeClass(x + ' animated');
        });
    };

    /**
     * Notifications
     */ 
    var Notification = function() {};

    //simple notificaiton
    Notification.prototype.notify = function(style,position, title, text) {
        var icon = 'fa fa-adjust';
        if(style == "error"){
            icon = "fa fa-exclamation";
        }else if(style == "warning"){
            icon = "fa fa-warning";
        }else if(style == "success"){
            icon = "fa fa-check";
        }else if(style == "custom"){
            icon = "md md-album";
        }else if(style == "info"){
            icon = "fa fa-question";
        }else{
            icon = "fa fa-adjust";
        }
        $.notify({
            title: title,
            text: text,
            image: "<i class='"+icon+"'></i>"
        }, {
            style: 'metro',
            className: style,
            globalPosition:position,
            showAnimation: "show",
            showDuration: 0,
            hideDuration: 0,
            autoHide: true,
            clickToHide: true
        });
    },

    //auto hide notification
    Notification.prototype.autoHideNotify = function (style,position, title, text) {
        var icon = "fa fa-adjust";
        if(style == "error"){
            icon = "fa fa-exclamation";
        }else if(style == "warning"){
            icon = "fa fa-warning";
        }else if(style == "success"){
            icon = "fa fa-check";
        }else if(style == "custom"){
            icon = "md md-album";
        }else if(style == "info"){
            icon = "fa fa-question";
        }else{
            icon = "fa fa-adjust";
        }
        $.notify({
            title: title,
            text: text,
            //image: "<i class='"+icon+"'></i>"
        }, {
            style: 'metro',
            className: style,
            globalPosition:position,
            showAnimation: "show",
            showDuration: 0,
            hideDuration: 0,
            autoHideDelay: 5000,
            autoHide: true,
            clickToHide: true
        });
    },
    //confirmation notification
    Notification.prototype.confirm = function(style,position, title) {
        var icon = "fa fa-adjust";
        if(style == "error"){
            icon = "fa fa-exclamation";
        }else if(style == "warning"){
            icon = "fa fa-warning";
        }else if(style == "success"){
            icon = "fa fa-check";
        }else if(style == "custom"){
            icon = "md md-album";
        }else if(style == "info"){
            icon = "fa fa-question";
        }else{
            icon = "fa fa-adjust";
        }
        $.notify({
            title: title,
            text: 'Are you sure you want to do nothing?<div class="clearfix"></div><br><a class="btn btn-sm btn-white yes">Yes</a> <a class="btn btn-sm btn-danger no">No</a>',
            image: "<i class='"+icon+"'></i>"
        }, {
            style: 'metro',
            className: style,
            globalPosition:position,
            showAnimation: "show",
            showDuration: 0,
            hideDuration: 0,
            autoHide: false,
            clickToHide: false
        });
        //listen for click events from this style
        $(document).on('click', '.notifyjs-metro-base .no', function() {
          //programmatically trigger propogating hide event
          $(this).trigger('notify-hide');
        });
        $(document).on('click', '.notifyjs-metro-base .yes', function() {
          //show button text
          alert($(this).text() + " clicked!");
          //hide notification
          $(this).trigger('notify-hide');
        });
    },
    //init - examples
    Notification.prototype.init = function() {

    },
    //init
    $.Notification = new Notification, $.Notification.Constructor = Notification


    
</script>
    <script type="text/javascript">

        $(document).ready(function(){
            /* Check location is already set or not */
                            /* fetch popular merchants and feature deals */
                popular_merchants();
                featured_deals();
                
        });

        /* This function is used for get popular merchants */
        function popular_merchants(){
            $.ajax({
                url : "https://xzonelocal.com/web/merchant/home_populer_merchants",
                type : 'GET',
                success : function(data) {
                    var response = JSON.parse(data);
                    if(response.code == "1"){
                        var merchants = response.data.nearby_shop;
                        var distance_type = response.data.distance_type;
                        var html = "";
                        for (var index in merchants) {
                            merchant = merchants[index];
                            is_open = "";
                            if(merchant.is_open == "1"){
                                is_open = "Open";
                            } else {
                                is_open = "Close";
                            }
                            html += "<div class='col-md-3 col-sm-6'>"
                                    + "<a href='https://xzonelocal.com/merchants/details/"+merchant.enc_shop_id+"'>"
                                    + "<div class='merchants-card'>"
                                    + "<div class='merchants-img'>"
                                    + "<img src='"+ merchant.cover_image +"' class='img-responsive' alt='"+ merchant.name +"'>"
                                    + "</div>"
                                    + "<div class='merchants-info'>"
                                    + "<div class=''>"
                                    + "<img src='"+ merchant.shop_image +"' class='merchants-logo img-responsive'>"
                                    + "<h3 title='" + merchant.name + "'> " + merchant.name + "</h3>"
                                    + "<p title='"+ merchant.location + "'>" + merchant.location + "</p>"
                                    + "</div>"
                                    + "</div>"
                                    + "<div class='merchants-right-info'>"
                                    + "<span class='merchants-ratting'><i class='fa fa-star'></i>" + merchant.rate + "</span>"
                                    + "<span class='merchants-status'>" + is_open + "</span>"
                                    + "<span class='merchants-distance'>" + merchant.distance + distance_type + "</span>"
                                    + "</div>"
                                    + "</div></a></div>";
                        }
                        $("#home_popular_merchants").html(html);
                    } else {
                        $("#home_popular_merchants").html("<div class='col-md-12'><h4>"+response.message+"</h4></div>");
                    }
                }, error : function(request,error) {
                    /* if any error while setting up session */
                    $("#home_popular_merchants").html("<div class='col-md-12'><h4>Failed to find near by populer merchants. Please try again later</h4></div>");
                }
            });
        }

        /* This function is used for get featured_deals */
        function featured_deals(){
            $.ajax({
                url : "https://xzonelocal.com/web/deals/home_featured_deals",
                type : 'GET',
                success : function(data) {
                    var response = JSON.parse(data);
                    if(response.code == "1"){
                        var deals = response.data;
                        var html = "";
                        for (var index in response.data) {
                            deal = deals[index];
                            html += "<div class='col-md-4 col-sm-6'>"
                                    + "<a href='https://xzonelocal.com/deals/details/"+deal.enc_deal_id+"'>" 
                                    + "<div class='deal-card'>"
                                    + "<div class='deal-img'><img src='"+deal.deal_image+"' class='img-responsive' alt='"+deal.title+"'></div>" 
                                    + "<div class='deal-info'>"
                                    + "<div class=''>"
                                    + "<span class='deal-price'> $" + deal.price +"</span>"
                                    + "<h3>" + deal.title + "</h3>"
                                    + "<p>" + deal.name + "</p>"
                                    + "</div>"
                                    + "</div>"
                                    + "<div class='deal-right-info'>"
                                    + "<span class='deal-points'> <i class='fa fa-star'></i> " + deal.points + " PTS </span>"
                                    + "</div>"
                                    + "</div></a></div>";
                        }
                        $("#home_featured_deals").html(html);
                    } else {
                        $("#home_featured_deals").html("<div class='col-md-12'><h4>"+response.message+"</h4></div>");
                    }
                }, error : function(request,error) {
                    /* if any error while setting up session */
                    $("#home_featured_deals").html("<div class='col-md-12'><h4>Failed to find near by featured deals. Please try again later</h4></div>");
                }
            });
        }
    </script>

 <div class="pac-container pac-logo hdpi" style="display: none; width: 0px; position: absolute; left: 0px; top: 0px;"></div></body></html>
